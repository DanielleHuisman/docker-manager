{
    "name": "docker-manager",
    "description": "Simple management tool for Docker containers.",
    "version": "0.5.2",
    "license": "MIT",
    "contributors": [
        "Danielle Huisman <danielle@huisman.me> (https://github.com/DanielleHuisman)"
    ],
    "repository": "github:DanielleHuisman/docker-manager",
    "keywords": [
        "docker",
        "manager",
        "container",
        "image",
        "management"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "systemd",
        "LICENSE.md",
        "README.md",
        "package.json"
    ],
    "bin": {
        "docker-manager": "./dist/cli.js",
        "docker-manager-server": "./dist/index.js"
    },
    "scripts": {
        "lint": "eslint src",
        "clean": "rimraf dist",
        "build": "npm run clean && npm run build:ts && npm run build:shebang && npm run build:shebang:cli",
        "build:ts": "tsc",
        "build:shebang": "echo \"#!/usr/bin/env node\n\n$(cat dist/index.js)\" > dist/index.js",
        "build:shebang:cli": "echo \"#!/usr/bin/env node\n\n$(cat dist/cli.js)\" > dist/cli.js",
        "prepublish": "npm run build",
        "start": "dotenv -- node dist/index.js",
        "dev": "dotenv -- nodemon -w src -e ts -x ts-node src/index.ts",
        "dev:cli": "ts-node src/cli.ts"
    },
    "dependencies": {
        "@types/express": "^5.0.3",
        "@types/fs-extra": "^11.0.4",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.7.2",
        "@types/yargs": "^17.0.33",
        "express": "^5.1.0",
        "fs-extra": "^11.3.2",
        "moment": "^2.30.1",
        "morgan": "^1.10.1",
        "yaml": "^2.8.1",
        "yargs": "^17.7.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.1",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "dotenv-cli": "^10.0.0",
        "eslint": "^8.53.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
