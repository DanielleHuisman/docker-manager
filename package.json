{
    "name": "docker-manager",
    "description": "Simple management tool for Docker containers.",
    "version": "0.2.5",
    "license": "MIT",
    "contributors": [
        "Daniel Huisman <daniel@huisman.me> (https://danielhuisman.io)"
    ],
    "repository": "git@git.github.com:DanielHuisman/docker-manager.git",
    "keywords": [
        "docker",
        "manager",
        "container",
        "image",
        "management"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "systemd",
        "LICENSE.md",
        "README.md",
        "package.json"
    ],
    "bin": "./dist/cli.js",
    "scripts": {
        "lint": "eslint src",
        "clean": "rimraf dist",
        "build": "yarn run clean && yarn run build:ts && yarn run build:views",
        "build:ts": "tsc",
        "build:views": "mkdir -p dist/views && cp -r src/views dist",
        "prepublish": "yarn run build",
        "start": "dotenv -- node dist/index.js",
        "dev": "dotenv -- nodemon -w src -e ts,graphql -x ts-node src/index.ts",
        "dev:cli": "ts-node src/cli.ts"
    },
    "dependencies": {
        "@danielhuisman/koa-base": "^1.0.12",
        "@types/fs-extra": "^9.0.12",
        "@types/node": "^16.9.4",
        "@types/yargs": "^17.0.2",
        "fs-extra": "^10.0.0",
        "koa-pug": "^5.0.0",
        "moment": "^2.29.1",
        "yaml": "^1.10.2",
        "yargs": "^17.1.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "dotenv-cli": "^4.0.0",
        "eslint": "^7.32.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.24.2",
        "nodemon": "^2.0.12",
        "rimraf": "^3.0.2",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    }
}
